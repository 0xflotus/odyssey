body,html 
  margin: 0;

.odo-header
  display: block;
  color: #fff;
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(-12rem, #124a94), color-stop(75vh, #004d6b));
  background-image: linear-gradient(to bottom, #124a94 -12rem, #004d6b 75vh);
  background-repeat: no-repeat;
  padding: 1.5rem 3rem;
  .odo-header-title
    font-size: 0;
  .odo-header-logo
    height: 1.5rem;
    fill: #ffffff;
  
.odo-nav
  display: grid;
  grid-template-columns: minmax(auto, auto) minmax(auto, auto);
  -webkit-column-gap: 1.5rem;
  -moz-column-gap: 1.5rem;
  column-gap: 1.5rem;
  text-transform: capitalize;

.odo-nav-heading 
  margin: 0 0 0.75rem;
  color: #ffffff;
  font-size: 1rem;
  font-weight: 600;

.odo-nav-list 
  margin: 0 0 1.5rem;
  list-style-type: none;
  font-size: 1rem;
  font-weight: 400;
  
.odo-main
  display: grid;
  grid-template-columns: minmax(auto, 64em) minmax(auto, auto);
  min-width: 0;
  -webkit-box-shadow: 0 2px 1rem rgba(0, 0, 0, 0.2);
  box-shadow: 0 2px 1rem rgba(0, 0, 0, 0.2);

.odo-article 
  min-width: 0;
  padding: 1.5rem 3rem;
